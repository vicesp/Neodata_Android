<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="app.android.my_app.MainActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="360dp"
        android:layout_height="240dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/gsc"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edUsuario"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:text="a"
        android:hint="Usuario"
        android:textColor="@android:color/black"
        android:inputType="textPersonName"
        android:background="#F2F2F2"
        app:layout_constraintLeft_toRightOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />
    <!--android:text="Admin"-->

    <EditText
        android:id="@+id/edContrase"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="21dp"
        android:textColor="@android:color/black"
        android:ems="10"
        android:background="#F2F2F2"
        android:text="a"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />
    <!--android:text="GSC."-->

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/user"
        app:layout_constraintLeft_toLeftOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/pass"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8"
        app:layout_constraintRight_toRightOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <Button
        android:id="@+id/buIngresar"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="#F7B73B"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="60dp"

        android:text="Ingresar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edContrase"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versión: 1.0.0"
        android:textColor="@android:color/black"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/buIngresar"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
